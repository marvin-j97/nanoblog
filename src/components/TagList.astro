---
import config from "../config";

interface Props {
  items: string[];
  transition?: boolean;
}

const { items, transition } = Astro.props;
---

<ul class="text-sm text-sky-800 dark:text-sky-300 flex flex-wrap items-center gap-3">
  {
    items.map((tag) => (
      <li class="mb-2 transition-all hover:translate-y-[-1px] hover:brightness-90">
        {/* @ts-ignore */}
        <a
          class="transition-all bg-sky-400/10 dark:bg-sky-800/10 hover:dark:bg-sky-800/30 rounded p-2"
          href={`${config.site.baseUrl}/tag/${tag}`}
          transition:name={transition ? tag : undefined}
        >
          #{tag}
        </a>
      </li>
    ))
  }
</ul>

---
import config from "../config";

interface Props {
  items: string[];
  transition?: boolean;
}

const { items, transition } = Astro.props;
---

<ul class="text-sm text-blue-800 dark:text-blue-300 flex flex-wrap items-center gap-3">
  {
    items
      .slice()
      .sort((a, b) => a.localeCompare(b))
      .map((tag) => (
        <li class="mb-2 transition-all hover:translate-y-[-1px] hover:brightness-90">
          {/* @ts-ignore */}
          <a
            class="transition-all bg-blue-400/10 dark:bg-blue-800/10 hover:dark:bg-blue-800/30 rounded p-2"
            href={`${config.site.baseUrl}/tag/${tag}`}
            transition:name={transition ? tag : undefined}
          >
            #{tag}
          </a>
        </li>
      ))
  }
</ul>
